{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.py$",
                "isAsync": true,
                "cmd": "ruff check ${file} --select I --fix | ruff format ${file}"
            },
            {
                "match": "\\.proto$",
                "cmd": "bash proto/gen.sh"
            }
        ]
    }
}